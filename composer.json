{
    "name": "twoir/qrcode",
    "description": "A lightweight, expressive QR code generator for Laravel. Generate PNG, SVG, or Base64 images with one line of code.",
    "keywords": ["qrcode", "laravel", "laravel-qrcode"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "twoir",
            "email": "xiayu@959602.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "chillerlan/php-qrcode": "^5.0",
        "ext-gd": "*",
        "illuminate/log": "12.*",
        "illuminate/support": "12.*"
    },
    "require-dev": {
        "laravel/framework": "12.*",
        "laravel/pint": "^1.27",
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^12.5"
    },
    "autoload": {
        "psr-4": {
            "Twoir\\QrCode\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Twoir\\QrCode\\QrCodeServiceProvider"
            ],
            "aliases": {
                "QrCode": "Twoir\\QrCode\\Facade\\QrCode"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
